{% extends 'base.html.twig' %}

{% block title %}Détails d'une photo{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Détails d'une photo {{ picture.id }}</h1>
    <img src="{{ picture.filename }}" alt="{{ picture.filename }}">
    <p>{{ picture.description }}</p>
    <p>{{ picture.evenement is null ? "Aucun" : picture.event.title }}</p>

    <twig:BootstrapButton path="{{ path('app_picture')}}" text="Retour" type="success" />
</div>
{% endblock %}
